@{
    ViewData["Title"] = "Contact Us";
}

<!-- Hero Section -->
<div class="text-center py-5" style="background: linear-gradient(45deg, #007bff, #0056b3); color: white;">
    <h1 class="display-4 fw-bold">Contact Us</h1>
    <p class="lead">We'd love to hear from you! Let us know how we can assist you.</p>
</div>

<!-- Mission and Vision Section -->
<section class="container my-5">
    <div class="row">
        <div class="col-md-6 text-center mb-4">
            <div class="p-4 shadow rounded" style="background: #f8f9fa;">
                <h3 class="fw-bold text-primary">Our Mission</h3>
                <p class="text-muted">To provide exceptional service and ensure customer satisfaction by addressing your needs and offering innovative solutions.</p>
            </div>
        </div>
        <div class="col-md-6 text-center mb-4">
            <div class="p-4 shadow rounded" style="background: #f8f9fa;">
                <h3 class="fw-bold text-primary">Our Vision</h3>
                <p class="text-muted">To become a leading provider in our industry by fostering long-term relationships and delivering value through every interaction.</p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Form Section -->
<section class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="p-5 shadow rounded" style="background: #fff;">
                <h2 class="text-center fw-bold text-primary mb-4">Get In Touch</h2>
                <p class="text-muted text-center">If you have any questions or need assistance, please reach out to us. We are here to help!</p>
                <form>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Your Name</label>
                        <input type="text" class="form-control" placeholder="Enter your name" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <input type="email" class="form-control" placeholder="Enter your email" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Message</label>
                        <textarea class="form-control" rows="5" placeholder="Your message" required></textarea>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary px-4 py-2">Send Message</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Call-To-Action Section -->
<section class="text-center py-5" style="background: linear-gradient(45deg, #007bff, #0056b3); color: white;">
    <h3 class="fw-bold">Need Immediate Assistance?</h3>
    <p class="lead">Feel free to call us at <strong>+1 234 567 890</strong> or email us at <strong>support@example.com</strong>.</p>
    <a href="mailto:support@example.com" class="btn btn-light px-4 py-2 fw-bold">Email Us</a>
</section>
