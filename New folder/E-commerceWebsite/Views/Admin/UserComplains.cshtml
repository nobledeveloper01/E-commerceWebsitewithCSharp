@model IEnumerable<E_commerceWebsite.Data.ContactMessage>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Admin Dashboard - User Complains";
}

<div class="container mt-5">
    <h2>User Complaints</h2>

    <table class="table table-bordered table-striped mt-3">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model)
            {
                <tr>
                    <td>@message.Id</td>
                    <td>@message.Name</td>
                    <td>@message.Email</td>
                    <td>@message.Subject</td>
                    <td>@message.Message</td>
                    <td>@message.SubmittedAt.ToString("dd/MM/yyyy")</td> <!-- Update field name if necessary -->
                </tr>
            }
        </tbody>
    </table>
</div>
