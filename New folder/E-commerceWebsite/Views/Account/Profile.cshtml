@model E_commerceWebsite.Data.User
@{
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="h4">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <p class="text-truncate">
                            <strong>Username:</strong> @Model.Username
                        </p>
                        <p class="text-truncate">
                            <strong>Email:</strong> @Model.Email
                        </p>
                        <p class="text-truncate">
                            <strong>Full Name:</strong> @Model.FullName
                        </p>
                    </div>
                    <div class="row g-2">
                        <div class="col-12 col-sm-6">
                            <a asp-action="EditProfile" class="btn btn-warning text-white w-100">Edit Profile</a>
                        </div>
                        <div class="col-12 col-sm-6">
                            <a asp-action="ChangePassword" class="btn btn-danger w-100">Change Password</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
