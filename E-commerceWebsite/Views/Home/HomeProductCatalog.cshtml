@model E_commerceWebsite.ViewModels.ProductCatalogViewModel

@{
    ViewData["Title"] = "Product Catalog";
}

<link rel="stylesheet" href="@Url.Content("~/css/site.css")" asp-append-version="true" />

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Roboto', sans-serif;
    }

    h2 {
        text-align: center;
        margin: 50px 0 30px;
        font-weight: 700;
        color: #343a40;
    }

    .btn-group .btn {
        min-width: 150px;
    }

    .search-bar {
        max-width: 600px;
        margin: 0 auto 20px;
    }

    .card {
        border-radius: 20px;
        transition: transform 0.4s, box-shadow 0.4s;
        overflow: hidden;
    }

    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #007bff;
    }

    .price {
        font-size: 1.2rem;
        color: #28a745;
        font-weight: 700;
    }

    .original-price {
        text-decoration: line-through;
        color: #6c757d;
        margin-left: 10px;
    }

    .pagination .page-link {
        color: #007bff;
        border-radius: 50%;
    }

    .pagination .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
    }
</style>

<h2>Explore Our Products</h2>

<div class="container my-4">
    <form method="get" asp-action="ProductCatalog" asp-controller="Home" asp-area="Home" class="search-bar d-flex mb-4">
        <input type="text" name="searchQuery" class="form-control me-2" placeholder="Search products..." value="@ViewBag.SearchQuery" />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <div class="d-flex justify-content-center mb-4">
        <div class="btn-group flex-wrap" role="group" aria-label="Category Filter">
            <form method="get" asp-action="ProductCatalog" asp-controller="Home" asp-area="Home">
                <div class="btn-group" role="group" aria-label="Category Filter">
                    <button type="submit" name="category" value="men-wear"
                            class="btn @(Model.ActiveCategory == "men-wear" ? "btn-primary" : "btn-outline-primary") mx-2">
                        Men's Wear
                    </button>
                    <button type="submit" name="category" value="women-wear"
                            class="btn @(Model.ActiveCategory == "women-wear" ? "btn-primary" : "btn-outline-primary") mx-2">
                        Women's Wear
                    </button>
                    <button type="submit" name="category" value="kids-wear"
                            class="btn @(Model.ActiveCategory == "kids-wear" ? "btn-primary" : "btn-outline-primary") mx-2">
                        Kids' Wear
                    </button>
                    <button type="submit" name="category" value="accessories"
                            class="btn @(Model.ActiveCategory == "accessories" ? "btn-primary" : "btn-outline-primary") mx-2">
                        Accessories
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        @if (Model.Products == null || !Model.Products.Any())
        {
            <div class="col-12 text-center">
                <div class="alert alert-warning" role="alert">
                    No products found.
                </div>
            </div>
        }
        else
        {
            @foreach (var product in Model.Products)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card shadow-sm">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                        <div class="card-body text-center">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="text-muted">@product.Description</p>
                            <p class="price">
                                ₦ @product.DiscountedPrice.ToString()
                                @if (product.DiscountedPrice < product.Price)
                                {
                                    <span class="original-price">₦ @product.Price.ToString()</span>
                                }
                            </p>
                            <a href="@Url.Action("ProductDetails", "Home", new { id = product.Id, area = "Home" })" class="btn btn-primary w-100 mt-2">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <div class="d-flex justify-content-center mt-4">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("ProductCatalog", "Home", new { area = "Home", pageNumber = Model.PageNumber - 1 })" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                        <a class="page-link" href="@Url.Action("ProductCatalog", "Home", new { area = "Home", pageNumber = i })">@i</a>
                    </li>
                }
                <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("ProductCatalog", "Home", new { area = "Home", pageNumber = Model.PageNumber + 1 })" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
