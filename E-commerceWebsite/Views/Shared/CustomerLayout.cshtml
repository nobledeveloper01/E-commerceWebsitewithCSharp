@{
    Layout = null;
    ViewData["Title"] = "Customer Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
       
        @@media (min-width: 992px) { 
            .sidebar-lg-fixed {
                position: fixed;
                top: 0;
                left: 0;
                min-height: 100vh;
                z-index: 1000;
            }

            .main-content {
                margin-left: 250px; 
            }
        }
    </style>
</head>
<body>
    <div class="d-flex flex-column flex-md-row">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar-lg-fixed text-white p-3 d-md-block" style="min-width: 250px; background-color: #53348b;">
            <h5 class="text-center mb-5">Customer Dashboard</h5>
            <ul class="nav flex-column">
                <li class="nav-item mb-4">
                    <a href="@Url.Action("Index", "Product", new { area = "Customer" })" class="nav-link text-white">
                        <i class="fas fa-store mr-2"></i> Shopping Mall
                    </a>
                </li>
                <li class="nav-item mb-4">
                    <a href="@Url.Action("ProductCatalog", "Product", new { area = "Customer" })" class="nav-link text-white">
                        <i class="fas fa-th mr-2"></i> Product Catalog
                    </a>
                </li>
                <li class="nav-item mb-4">
                    <a href="@Url.Action("OrderHistory", "Order", new { area = "Customer" })" class="nav-link text-white">
                        <i class="fas fa-history mr-2"></i> Order History
                    </a>
                </li>
               
            </ul>

            <hr class="bg-light">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a href="@Url.Action("Logout", "Account", new { area = "Account" })" class="nav-link text-white">
                        <i class="fas fa-sign-out-alt mr-2"></i> Logout
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content Area -->
        <div class="flex-grow-1 main-content">
            <!-- Header -->
            <header class="d-flex align-items-center justify-content-between p-3 bg-white shadow-sm">
                <button class="btn btn-primary d-md-none" type="button" data-toggle="collapse" data-target="#sidebar" aria-controls="sidebar" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="input-group w-50">
                    <input type="text" class="form-control" placeholder="Search products...">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button"><i class="fas fa-search"></i></button>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <a href="@Url.Action("Cart", "Cart", new { area = "Customer" })" class="mr-3 text-dark"><i class="fas fa-shopping-cart fa-lg"></i></a>
                    <a href="@Url.Action("Profile", "Account", new { area = "Account" })" class="mr-3 text-dark"><i class="fas fa-user-circle fa-lg"></i></a>
                  
                </div>
            </header>

            <!-- Page Content -->
            <main class="p-4" style="overflow-x: auto;">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bootstrap JS and FontAwesome -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>
